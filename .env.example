# CardVault AI — Environment Variables
# Copy this file to .env and fill in your keys

# Claude Vision API (required for card identification)
ANTHROPIC_API_KEY=sk-ant-...

# eBay API (optional — app runs in mock mode without these)
EBAY_CLIENT_ID=your-ebay-client-id
EBAY_CLIENT_SECRET=your-ebay-client-secret
EBAY_SANDBOX=true   # set to false for production

# Flask
SECRET_KEY=change-me-in-production
FLASK_DEBUG=false

# Database path (default: card_collection.db in project root)
DB_PATH=card_collection.db

# Server port (default: 5000)
PORT=5000
